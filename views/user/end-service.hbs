/* Stats Section */
.stats {
    padding: 40px 0; /* Reduced padding */
    background: #ffffff; /* Changed to white background */
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Softened shadow for light background */
    z-index: 1;
}

/* Background Bubble Animation */
.stats::before,
.stats::after {
    content: '';
    position: absolute;
    top: 100%;
    width: 200px;
    height: 200px;
    background: rgba(35, 47, 101, 0.05); /* Adjusted for light background */
    border-radius: 50%;
    animation: bubble 12s infinite cubic-bezier(0.3, 0.2, 0.4, 1);
    z-index: -1;
}

.stats::before {
    left: 20%;
    width: 150px;
    height: 150px;
    animation-delay: 2s;
}

.stats::after {
    left: 70%;
    width: 120px;
    height: 120px;
    animation-delay: 5s;
}

/* Additional Bubbles */
.stats .bubble {
    position: absolute;
    bottom: -100px;
    background: rgba(0, 184, 148, 0.05); /* Adjusted for light background */
    border-radius: 50%;
    animation: bubble 15s infinite cubic-bezier(0.3, 0.2, 0.4, 1);
    z-index: -1;
}

.stats .bubble.bubble-1 {
    left: 25%;
    width: 180px;
    height: 180px;
    animation-delay: 3s;
}

.stats .bubble.bubble-2 {
    left: 50%;
    width: 130px;
    height: 130px;
    animation-delay: 6s;
}

.stats .bubble.bubble-3 {
    left: 80%;
    width: 100px;
    height: 100px;
    animation-delay: 8s;
}

/* Bubble Animation Keyframes */
@keyframes bubble {
    0% {
        transform: translateY(0) scale(1);
        opacity: 0.4;
    }
    50% {
        transform: translateY(-300px) scale(1.2);
        opacity: 0.8;
    }
    100% {
        transform: translateY(-600px) scale(1.5);
        opacity: 0;
    }
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 15px;
}

/* Stat Card */
.stat-card {
    background: #ffffff;
    border: 1px solid rgba(35, 47, 101, 0.1); /* Adjusted border color */
    border-radius: 12px;
    padding: 20px 15px;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
}

/* Hover Effects */
.stat-card:hover {
    transform: translateY(-8px) scale(1.02);
    background: #ffffff;
    border-color: rgba(35, 47, 101, 0.2);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1),
                0 0 20px rgba(35, 47, 101, 0.1);
}

/* Shine Effect */
.stat-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 180%;
    height: 180%;
    background: linear-gradient(
        60deg,
        transparent 0%,
        rgba(35, 47, 101, 0.05) 50%,
        transparent 100%
    );
    transform: rotate(60deg);
    opacity: 0;
}

.stat-card:hover::after {
    animation: shine 1.2s infinite;
}

@keyframes shine {
    0% {
        left: -50%;
        opacity: 0;
    }
    50% {
        opacity: 1;
    }
    100% {
        left: 150%;
        opacity: 0;
    }
}

/* Stat Number */
.stat-number {
    font-size: 2.2em;
    font-weight: 700;
    background: linear-gradient(45deg, #232F65, #1a2340); /* Changed to dark blue gradient */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 10px;
}

/* Description Text */
.stat-card p {
    color: #232F65; /* Changed to match brand color */
    font-size: 0.9em;
    font-weight: 500;
    margin-top: 8px;
}

/* Floating Icon Effect */
.stat-card::before {
    content: '';
    position: absolute;
    width: 45px;
    height: 45px;
    background: rgba(35, 47, 101, 0.08); /* Adjusted for light background */
    border-radius: 50%;
    top: -15px;
    right: -15px;
}

.stat-card:hover::before {
    transform: scale(2.5);
    opacity: 0;
}

/* Responsive Design Adjustments */
@media (max-width: 1024px) {
