/* Button Animation */
.btn {
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: var(--secondary);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.6s ease;
    z-index: -1;
}

.btn:hover::before {
    width: 300px;
    height: 300px;
}

.btn:hover {
    color: var(--primary);
    border-color: var(--secondary);
}

/* Features Animation */
.features li, .not-included li {
    transition: all 0.3s ease;
}

.features li:hover, .not-included li:hover {
    transform: translateX(5px);
    color: var(--primary);
}

/* Selection Indicator */
.pricing-card .check-mark {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 25px;
    height: 25px;
    border: 2px solid var(--accent);
    border-radius: 50%;
    opacity: 0;
    transform: scale(0);
    transition: all 0.3s ease;
    z-index: 3;
}

.pricing-card.selected .check-mark {
    opacity: 1;
    transform: scale(1);
}

.pricing-card.selected .check-mark::before {
    content: '✓';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--accent);
    font-size: 14px;
}

